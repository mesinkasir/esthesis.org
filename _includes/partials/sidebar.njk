<div class="col-md-3 p-3">
    {% if metadata.widgets.show_latest %}
        <h3 class="col-md-12 mt-5 mb-5 fw-semibold">{{ metadata.widgets.widget_1.title }}</h3>
        {% for post in collections.posts | limit(3) %}
            <article class="row mt-3 hover-effect-container">
               <div class="col-md-4 col-3 rounded"
         style="background-image: url('{{ post.data.image or metadata.image }}'); 
                background-size: cover; 
                background-position: center; 
                background-repeat: no-repeat;
                min-height: 70px;">
    </div>
                <div class="col-md-8 col-9 ">
                    <a href="{{ post.url }}" class="none d">
                        <p class="fw-semibold mb-1">{{ post.data.title }}</p>
                        <div class="small text-body-secondary">
             {{ post.data.description | default('') | truncate(60) }}
        </div>
                    </a>
                </div>
            </article>
        {% endfor %}
    {% endif %}

    {% if metadata.widgets.widget_2.show %}
        <h3 class="col-md-12 mt-5 mb-3 fw-semibold">
            <a href="{{ metadata.widgets.widget_2.url }}" class="none">{{ metadata.widgets.widget_2.title }}</a>
        </h3>
        <article class="row mt-3">
            <div class="col-md-12">
                    <img class="img-thumbnail border-0 p-0 mb-3" 
                         alt="{{ metadata.widgets.widget_2.alt }}" 
                         style="width: 100px; height: auto;"
                         loading="lazy"
                         src="{{ metadata.widgets.widget_2.image }}"/>
                    <p class="small">{{ metadata.widgets.widget_2.text }}</p>
            </div>
        </article>
    {% endif %}

    {% if metadata.widgets.show_authors %}
        <h3 class="col-md-12 mt-5 mb-5 fw-semibold">{{ metadata.widgets.widget_3.title }}</h3>
        
        {% set count = 0 %}
        {% for author in collections.all %}
            {% if "/contributor/" in author.inputPath and not author.inputPath.endsWith("index.md") and count < 5 %}
                {% set count = count + 1 %}
                <article class="row mt-3 mb-3 align-items-center hover-effect-container">
                    <div class="col-md-3 col-3">
                        <a href="/contributor/{{ author.fileSlug }}/" 
                        class="d-block">
                            <div class="ratio ratio-1x1 mx-auto" style="width: 50px;"> 
                                {% if author.data.image %}
                                    <img src="{{ author.data.image }}" 
                                         alt="{{ author.data.title }}" 
                                         class="rounded-circle object-fit-cover border shadow-sm"
                                         style="width: 50px; height: 50px;">
                                {% else %}
                                    <div class="rounded-circle bg-danger text-black d-flex align-items-center justify-content-center fw-bold shadow-sm" 
                                         style="width: 50px; height: 50px; font-size: 1.2rem; border: 1px solid #ddd;">
                                        E
                                    </div>
                                {% endif %}
                            </div>
                        </a>
                    </div>
                    <div class="col-md-9 col-9 ps-2">
                        <a href="/contributor/{{ author.fileSlug }}/" 
                        class="text-decoration-none d-block">
                            <p class="fw-bold mb-0" style="font-size: 0.9rem; line-height: 1.2;">
                                {{ author.data.title }}
                            </p>
                            <span class="small text-body-secondary d-block" style="font-size: 0.7rem;">
                                {{ author.data.affiliation | default('Contributor') }}
                            </span>
                        </a>
                    </div>
                </article>
            {% endif %}
        {% endfor %}
    {% endif %}
</div>