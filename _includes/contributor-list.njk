---
layout: base.njk
---
{% include "partials/hero.njk" %}
{% include "partials/nav.njk" %}

<section class="container py-5">
    <div class="col-md-10 mx-auto">
     
        
        <div class="row g-4">
            {% for person in contributors %}
            <article class="col-6 col-md-3 mb-5">
                <div class="contributor-card h-100">
                    <a href="/contributor/{{ person.fileSlug }}/" class="text-decoration-none text-dark">
                        <div class="ratio ratio-1x1 mb-3">
                            <img src="{{ person.data.image or metadata.image }}" 
                                 alt="{{ person.data.title }}"
                                 class="rounded-3 object-fit-cover grayscale-hover"
                                 style="transition: filter 0.3s ease;">
                        </div>
                        <h3 class="fw-bold h4 mb-1">{{ person.data.title }}</h3>
                        <p class="text-muted small text-uppercase letter-spacing-1">
                            {{ person.data.affiliation | default('Contributor') }}
                        </p>
                    </a>
                </div>
            </article>
            {% else %}
                <div class="col-12 text-center py-5">
                    <p class="lead text-muted">No contributors found.</p>
                </div>
            {% endfor %}
        </div>

        <nav class="border-top pt-4 mt-5">
            <div class="d-flex justify-content-between align-items-center">
                {% if pagination.href.previous %}
                    <a href="{{ pagination.href.previous }}" class="btn btn-dark btn-lg rounded-pill px-4">← Previous</a>
                {% else %}
                    <div class="text-muted opacity-25">← Previous</div>
                {% endif %}
                
                <span class="fw-bold">Page {{ pagination.pageNumber + 1 }} of {{ pagination.pages.length }}</span>

                {% if pagination.href.next %}
                    <a href="{{ pagination.href.next }}" class="btn btn-dark btn-lg rounded-pill px-4">Next →</a>
                {% else %}
                    <div class="text-muted opacity-25">Next →</div>
                {% endif %}
            </div>
        </nav>
    </div>
</section>

<style>
.grayscale-hover:hover {
    filter: grayscale(100%);
}
.letter-spacing-1 {
    letter-spacing: 0.1em;
}
</style>