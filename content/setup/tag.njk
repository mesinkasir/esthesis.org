---
layout: base.njk
title: Tag
pagination:
  data: collections.tags
  size: 1
  alias: tag
permalink: "/tags/{{ tag | slugify }}/"
---

<h1 data-pagefind-meta="title" data-pagefind-weight="1">Tag: {{ tag | formatCategoryTag }}</h1>

<ul data-pagefind-ignore>
  {% for post in collections.posts | filterByTagSafe(tag) | reverse %}
    <li><a href="{{ post.url }}">{{ post.data.title }}</a> <small>({{ post.date | readableDate }})</small></li>
  {% endfor %}
</ul>
