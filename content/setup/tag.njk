---
layout: base.njk
pagination:
  data: collections
  size: 1
  alias: tag
  filter: ["all", "post", "posts", "categories"]
permalink: "/tags/{{ tag | slugify }}/"
---
<section class="container-fluid">
<div class="col-md-10 mx-auto">

<h1 class="mb-5 fw-bold text-uppercase"></h1>Tag: {{ tag | displayName }}Archive</h1>


<div class="row">
    {% set posts = collections.all | filterByTag(tag) | reverse %}
    {% for post in posts %}
    <article class="col-md-4 p-3 mb-4 d-flex flex-column">
        <div class="img-post-list mb-3">
            <a href="{{ post.url }}">
                <img class="img-fluid post-list-image rounded shadow-sm" 
                     alt="{{ post.data.title }}"
                     src="{{ post.data.image or metadata.image }}"
                     style="aspect-ratio: 16/9; object-fit: cover; width: 100%;"/>
            </a>
        </div>

        <div class="content-post-list flex-grow-1">
            <a href="{{ post.url }}" class="text-decoration-none">
                <p class="text-danger-emphasis fw-semibold mb-1 small">
                    {{ post.data.categories[0] | displayName | default('Uncategorized') }}
                </p>
                <h4 class="text-body-emphasis fw-bold mb-2">{{ post.data.title }}</h4>
                {% if post.data.description %}
                <div class="text-body-secondary small mb-3">
                    {{ post.data.description | truncate(120) }}
                </div>
                {% endif %}
            </a>
        </div>

        <div class="mt-3 d-flex align-items-center">
            {% set rawAuthor = (post.data.author or post.data.authors) | ensureString %}
            {% set contributor = collections.all | getContributor(rawAuthor) %}
            {% set name = contributor.data.name if contributor else (rawAuthor | displayName) %}

            <img class="rounded-circle me-2 border" width="30" height="30"
                 alt="{{ name }}"
                 src="{{ contributor.data.image if (contributor and contributor.data.image) else metadata.image }}"/>

            <span class="text-body-secondary small">
                By <a href="/contributor/{{ rawAuthor | slugify }}/" class="text-body-emphasis fw-bold text-decoration-none">
                    {{ name }}
                </a>
            </span>
        </div>
    </article>
    {% else %}
    <div class="col-12 text-center py-5">
        <p class="text-body-secondary">Tidak ada artikel dengan tag ini.</p>
    </div>
    {% endfor %}
</div>
</div>
</section>